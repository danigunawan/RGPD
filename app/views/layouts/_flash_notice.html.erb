<% flash.each do |message_type, message| %>

<div class="alert alert-<%= message_type %> alert-dismissible fade show" id = "notice" role="alert" >
  <%= message %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

<% end %>

<% if defined?(object) && object.present? && object.errors.any? %>
<% object.errors.full_messages.each do |msg| %>
<div class="alert alert-danger alert-dismissible fade show" id = "notice" role="alert" >
  <%= msg %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<% end %>
<% end %>
