<% if flash[:notice] %>
  <div class = "alert alert-success alert-dismissible fade show" id = "notice"
  role="alert">
    <%= flash[:notice] %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
