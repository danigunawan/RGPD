<%= form_for @user do |f| %>

<div class = "row form-group">
<div class = "col">
  <%= f.label :name, 'Prénom *' %><br>
  <%= f.text_field :name, class: "form-control",
                placeholder: "Entrer votre prénom", required: true %>
</div>
<div class = "col">
  <%= f.label :surname, 'Nom *' %><br>
  <%= f.text_field :surname, class: "form-control",
                          placeholder: "Entrer votre nom", required: true %>
</div>
</div>

<div class= "form-group">
<%= f.label :email, 'Courriel *' %><br>
<%= f.email_field :email, class: "form-control",
                    placeholder: "Entrer votre courriel", required: true %>
<small id = "required-help" style="color: red;" class="form-text">
                    Les champs marqués d'un "*" sont obligatoires</small>
</div>

<%= f.label :phone, 'Numéro de téléphone portable' %><br>
<%= f.text_field :phone, class: "form-control",
              placeholder: "Entrer votre numéro de téléphone portable"%>

<%= f.label :address, 'Adresse' %><br>
<%= f.text_field :address, class: "form-control",
                                    placeholder: "Entrer votre adresse"%>

<div class = "row form-group">
<div class= "col">
  <%= f.label :city, 'Ville' %><br>
  <%= f.text_field :city, class: "form-control",
                                placeholder: "Entrer votre ville"%>
</div>

<div class= "col">
  <%= f.label :zipcode, 'Code Postal' %><br>
  <%= f.text_field :zipcode, class: "form-control",
                              placeholder: "Entrer votre code postal"%>
</div>
</div>
<hr/>
