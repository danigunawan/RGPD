<% @cur_user = User.find(params[:user_id]) %>

<h3 class="text-center" style="padding: 30px 0px 50px 0px;">Anciennes données</h3>
<%= form_for @cur_user do |f| %>

<div class="form-group row">
<div class ='col'>
<%= f.label :name, "Ancien Prénom" %><br/>
<%= f.text_field :name, value: @cur_user.name, disabled: true,
                                  class: "form-control" %>
</div>
<div class="col">
<%= f.label :surname, "Ancien Nom" %><br/>
<%= f.text_field :surname, value: @cur_user.surname, disabled: true,
                                  class: "form-control"%>
</div>

</div>

<div class= "form-group">
<%= f.label :email, 'Ancien Courriel'%><br/>
<%= f.email_field :email, value: @cur_user.email, disabled: true,
                                  class: "form-control"%>
</div>

<% end %>
<hr>

<h3 class="text-center" style="padding: 30px 0px 50px 0px;">Nouvelles données</h3>
<%= form_for @modification, url: user_modifications_path do |f| %>

<div class = "row form-group">
<div class = "col">
<%= f.label :name, 'Prénom *' %><br>
<%= f.text_field :name, class: "form-control",
            placeholder: "Entrer votre prénom", required: true %>
</div>
<div class = "col">
<%= f.label :surname, 'Nom *' %><br>
<%= f.text_field :surname, class: "form-control",
                      placeholder: "Entrer votre nom", required: true %>
</div>
</div>

<div class= "form-group">
<%= f.label :email, 'Courriel *' %><br>
<%= f.email_field :email, class: "form-control",
                placeholder: "Entrer votre courriel", required: true %>
<small id = "required-help" style="color: red;" class="form-text">
                Les champs marqués d'un "*" sont obligatoires</small>
</div>

<%= f.label :phone, 'Numéro de téléphone portable' %><br>
<%= f.text_field :phone, class: "form-control",
          placeholder: "Entrer votre numéro de téléphone portable"%>

<%= f.label :address, 'Adresse' %><br>
<%= f.text_field :address, class: "form-control",
                                placeholder: "Entrer votre adresse"%>

<div class = "row form-group">
<div class= "col">
<%= f.label :city, 'Ville' %><br>
<%= f.text_field :city, class: "form-control",
                            placeholder: "Entrer votre ville"%>
</div>

<div class= "col">
<%= f.label :zipcode, 'Code Postal' %><br>
<%= f.text_field :zipcode, class: "form-control",
                          placeholder: "Entrer votre code postal"%>
</div>
</div>

<hr/>

<div class="mx-auto">
<%= f.submit "Envoyer", class: "btn btn-primary align-self-center"%>
</div>

<%= link_to 'Retour au formulaire', new_user_path %>
<%end%>
