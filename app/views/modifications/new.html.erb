<% @cur_user = User.find(params[:user_id]) %>
<%= render "layouts/flash_notice" %>

<h3 class="text-center" style="padding: 20px 0px 30px 0px;">Anciennes données</h3>
<%= form_for @cur_user do |f| %>

<div class="informative">
  <div class="form-group row">
    <div class ='col'>
      <%= f.label :name, "Ancien Prénom" %><br/>
      <%= f.text_field :name, value: @cur_user.name, disabled: true,
      class: "form-control" %>
    </div>
    <div class="col">
      <%= f.label :surname, "Ancien Nom" %><br/>
      <%= f.text_field :surname, value: @cur_user.surname, disabled: true,
      class: "form-control"%>
    </div>

  </div>

  <div class= "form-group">
    <%= f.label :email, 'Ancien Courriel'%><br/>
    <%= f.email_field :email, value: @cur_user.email, disabled: true,
    class: "form-control"%>
  </div>
  <% end %>
</div>
<hr>

<h3 class="text-center" style="padding: 20px 0px 30px 0px;">Nouvelles données</h3>
<%= form_for @modification, url: user_modifications_path do |f| %>

<%= render partial: "layouts/new_user_form", locals: { f: f } %>

<%end%>

<%= link_to 'Retour au formulaire', new_user_path, class: "btn btn-primary submit"%>
