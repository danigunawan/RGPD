<p id="notice"><%= notice %></p>

<h1>Modifications</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>String</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Address</th>
      <th>City</th>
      <th>Zipcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @modifications.each do |modification| %>
      <tr>
        <td><%= modification.name %></td>
        <td><%= modification.surname %></td>
        <td><%= modification.string %></td>
        <td><%= modification.email %></td>
        <td><%= modification.phone %></td>
        <td><%= modification.address %></td>
        <td><%= modification.city %></td>
        <td><%= modification.zipcode %></td>
        <td><%= link_to 'Show', modification %></td>
        <td><%= link_to 'Edit', edit_modification_path(modification) %></td>
        <td><%= link_to 'Destroy', modification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

