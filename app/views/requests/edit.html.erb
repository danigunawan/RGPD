<div class="row">
<h1 class="mx-auto page-title">Modification du type de demande</h1>
</div>
<div class="informative col mx-auto">
    <%= form_for @request do |f| %>
    <div class="col">
      <%= f.label :title %>
      <%= f.text_field :title, class:"form-control", required: true %>
      </div>
      <div class= "col">
      <%= f.submit "Valider", class:"submit btn btn-primary"%>
      </div>
    <% end %>
</div>

<%= link_to 'Retour', requests_path, class:"btn btn-search" %>
