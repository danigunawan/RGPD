<%= form_with(model: officer, local: true) do |form| %>
<div class="informative">
<div class="row">
  <div class="col">
    <%= form.label :firstname, "Prénom" %>
    <%= form.text_field :firstname, class: "form-control", required: true %>
  </div>

  <div class="col">
    <%= form.label :lastname, "Nom de famille" %>
    <%= form.text_field :lastname, class: "form-control", required: true %>
  </div>
</div>
<div class="row">
  <div class="col">
    <%= form.label :email, "Courriel" %>
    <%= form.text_field :email, class: "form-control", required: true %>
  </div>
</div>
<div class="row">
  <div class="col">
    <%= form.label :password, "Mot de passe" %>
    <%= form.password_field :password, class: "form-control", required: true %>
  </div>

  <div class="col">
    <%= form.label :password_confirmation, "Confirmation de mot de passe"%>
    <%= form.password_field :password_confirmation, class: "form-control", required: true %>
  </div>

</div>
<small class="form-text text-muted">
  Le mot de passe doit faire au moins 8 caractères de long, contenir au moins une lettre majuscule, une lettre minuscule, un chiffre et 1 charactère spécial.
</small>
<div class="row">
  <div class="col">
    <%= label_tag :code, "Code unique" %>
    <%= text_field_tag :code, nil, class:"form-control", required: true  %>
  </div>
</div>
</div>
<hr/>
  <div class="row">
    <%= form.submit "Valider", class:"submit btn-lg btn-primary mx-auto"%>
  </div>

<% end %>
