
<div class="row">
<h1 class="page-title mx-auto">Connexion</h1>
</div>
<% if flash[:alert] %>
  <div class = "alert alert-danger alert-dismissible fade show" id = "notice"
  role="alert" style="margin:50px;">
    <%= flash[:alert] %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>
<%= form_tag sessions_path do |form| %>
<div class="row">
  <div class= "col">
    <%= label_tag :email %>
    <%= text_field_tag :email, '', class: "form-control" %>
  </div>
  </div>
  <div class="row">
  <div class= "col">
    <%= label_tag :password %>
    <%= password_field_tag :password, '', class: "form-control" %>
  </div>
  </div>
  <hr />
  <div class="row">
    <%= submit_tag "Se Connecter", class: "btn-lg btn-primary submit center" %>
  </div>
<% end %>
