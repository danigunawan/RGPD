
<div class="row">
<h1 class="page-title mx-auto">Connexion</h1>
</div>
<%= render partial: "layouts/flash_notice", locals: { object: @session } %>
<%= form_for(:session, url: sessions_url) do |form| %>
<div class="row">
  <div class= "col">
    <%= label_tag :email %>
    <%= text_field_tag :email, '', class: "form-control" %>
  </div>
  </div>
  <div class="row">
  <div class= "col">
    <%= label_tag :password %>
    <%= password_field_tag :password, '', class: "form-control" %>
  </div>
  </div>
  <hr />
  <div class="row">
    <%= submit_tag "Se Connecter", class: "btn-lg btn-primary submit center" %>
  </div>
<% end %>
