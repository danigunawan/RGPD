<% if flash[:alert] %>
  <div class = "alert alert-danger alert-dismissible fade show" id = "notice"
  role="alert" style="margin:50px;">
    <%= flash[:alert] %>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>

<h1>Login</h1>
<%= form_tag sessions_path do |form| %>
  <div class=”field”>
    <%= label_tag :email %>
    <%= text_field_tag :email, '', class: "form-control" %>
  </div>
  <div class=”field”>
    <%= label_tag :password %>
    <%= password_field_tag :password, '', class: "form-control" %>
  </div>
  <div class=”actions”>
    <%= submit_tag "Login" %>
  </div>
<% end %>
